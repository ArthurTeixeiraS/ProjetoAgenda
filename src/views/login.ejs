<%- include('includes/head') %>
<%- include('includes/nav') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3 main-content">
        <h1 class="text-center">Criar conta ou Entrar</h1> 
        <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
        <%- include('includes/messages') %>
        <div class="row">
          <div class="col-lg my-2">
           <h4>Faça seu cadastro</h4>
           <p>Se você ainda não tem uma conta, preencha o formulário abaixo:</p>
           <form action="/login/register" class="form-cadastro" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label class="form-label">Endereço de email:</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label class="form-label">Sua Senha:</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>

          </div>


          <div class="col-lg my-3">
            <h4>Entrar no sistema</h4>
            <form action="/login/login" class="form-login" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <p>Se você já tem uma conta, faça login abaixo:</p>
              <div class="mb-3">
                <label class="form-label">Endereço de email:</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="mb-3">
                <label class="form-label">Sua Senha:</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Entrar no sistema</button>
            </form>

          </div>
        </div>
      
      </div>
      <div class="col-lg-2">
      </div>

    </div>
  </div>

<%- include('includes/footer') %>
